<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:textAppearance">@style/NavigationViewTextAppearance</item>
        <item name="android:itemPadding">8dp</item>
    </style>

    <style name="NavigationViewTextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:popupBackground">@drawable/spinner_arrow</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="medicalTestMenuFABLabel">
        <item name="android:background">@drawable/background_label_fab</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="pregnancyDiaryMenuFABLabel">
        <item name="android:background">@drawable/background_label_pregnancy_diary_fab</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <!-- Establecer un desplazamiento vertical para el menÃº emergente -->
        <item name="android:dropDownVerticalOffset">12dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>


</resources>