<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragmentsDrawerMenu.appointmentsSteps.AppointmentsStep2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSearchAndList"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:background="@color/blue">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical"
            android:id="@+id/btnBack"
            android:text="@string/buscar_turno"
            android:textColor="@color/white"
            app:drawableStartCompat="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:text="@string/paso_2_5"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/toolbarSearchAndList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:id="@+id/tvTitle"
        android:textSize="18sp"
        android:text="@string/seleccionar_tipo_de_turno"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="242dp"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:id="@+id/cvSpecialities"
        app:cardElevation="20dp"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="24dp"
                android:scaleType="fitXY"
                android:layout_margin="20dp"
                android:contentDescription="@string/todo"
                android:layout_alignParentStart="true"
                android:src="@drawable/icon_health_controls"
                android:layout_height="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/especialidades"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"/>

        </RelativeLayout>




    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="242dp"
        android:layout_below="@id/cvSpecialities"
        android:layout_centerHorizontal="true"
        android:id="@+id/cvDoctors"
        app:cardElevation="20dp"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="24dp"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/todo"
                android:layout_margin="20dp"
                android:src="@drawable/icon_doctors"
                android:layout_height="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/profesionales"
                android:layout_marginEnd="20dp"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="wrap_content"
                android:contentDescription="@string/todo"
                android:layout_margin="20dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:layout_height="wrap_content"/>

        </RelativeLayout>




    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>