<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentsBottomMenu.CredentialActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:backgroundTint="@color/blue"
        android:contentDescription="@string/todo"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="20dp"
        android:elevation="20dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/todo"
        android:src="@drawable/credential_back"
        android:id="@+id/credential_back"
        android:layout_marginStart="200dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="220dp"
        app:layout_constraintTop_toTopOf="@+id/credential_back"
        app:layout_constraintStart_toStartOf="@id/credential_back"
        android:layout_marginTop="10dp"
        android:elevation="18dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/todo"
        android:id="@+id/ivCredential"
        android:src="@drawable/profile_img_minerva"
        android:layout_marginStart="32dp"
        android:layout_height="220dp"
        tools:ignore="VisualLintBounds" />

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tvIdNumber"
        app:layout_constraintStart_toStartOf="@id/credential_back"
        android:textStyle="bold"
        android:id="@+id/tvName"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:elevation="22dp"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="28dp"
        android:layout_height="wrap_content"
        tools:ignore="SpUsage" />

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tvDni"
        app:layout_constraintStart_toStartOf="@id/credential_back"
        android:textStyle="bold"
        android:id="@+id/tvIdNumber"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:elevation="22dp"
        android:layout_marginStart="28dp"
        android:layout_height="wrap_content"
        tools:ignore="SpUsage" />

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/credential_back"
        app:layout_constraintStart_toStartOf="@id/credential_back"
        android:textStyle="bold"
        android:id="@+id/tvDni"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:elevation="22dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="28dp"
        android:layout_height="wrap_content"
        tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>