<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            android:id="@+id/ivFetus"
            android:contentDescription="@string/todo"
            android:src="@drawable/fetus_week_40"
            android:layout_height="wrap_content"
            app:tint="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/ivFetus"
            android:layout_margin="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/semana_5"
            android:id="@+id/tvFetus"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvDescFetus"
            android:layout_below="@id/tvFetus"
            android:layout_margin="12dp"
            android:textColor="@color/black"
            android:text="@string/description_fetus_week_05"
            android:layout_height="wrap_content"
            tools:ignore="VisualLintLongText" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:id="@+id/btnClose"
            app:cardElevation="10dp"
            app:strokeColor="@color/gray"
            app:strokeWidth="1dp"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/white"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:text="@string/cerrar"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>