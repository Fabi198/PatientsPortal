<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/domicilio_de_facturaci_n"
                android:textColor="@color/blue"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/baseline_add_location_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/cambiar"
                android:textColor="@color/blue"
                app:drawableStartCompat="@drawable/baseline_edit_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clReadingView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/btnEdit">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="240dp" />

                <TextView
                    android:id="@+id/tvStreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/calle"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDisplayedStreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvStreet"
                    app:layout_constraintStart_toEndOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="@id/tvStreet" />

                <ImageView
                    android:id="@+id/separatorStreet"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvStreet"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/n_mero"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorStreet" />

                <TextView
                    android:id="@+id/tvDisplayedNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvNumber"
                    app:layout_constraintStart_toEndOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="@id/tvNumber" />

                <ImageView
                    android:id="@+id/separatorNumber"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvNumber"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvFloor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/piso"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorNumber" />

                <TextView
                    android:id="@+id/tvDisplayedFloor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvFloor"
                    app:layout_constraintStart_toEndOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="@id/tvFloor" />

                <ImageView
                    android:id="@+id/separatorFloor"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvFloor"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/departamento"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorFloor" />

                <TextView
                    android:id="@+id/tvDisplayedDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvDepartment"
                    app:layout_constraintStart_toEndOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="@id/tvDepartment" />

                <ImageView
                    android:id="@+id/separatorDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvDepartment"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvObservations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/observaciones"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorDepartment" />

                <TextView
                    android:id="@+id/tvDisplayedObservations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvObservations"
                    app:layout_constraintStart_toEndOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="@id/tvObservations" />

                <ImageView
                    android:id="@+id/separatorObservations"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvObservations"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvPostalCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/c_digo_postal"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorObservations" />

                <TextView
                    android:id="@+id/tvDisplayedPostalCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvPostalCode"
                    app:layout_constraintStart_toEndOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="@id/tvPostalCode" />

                <ImageView
                    android:id="@+id/separatorPostalCode"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvPostalCode"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/pa_s"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorPostalCode" />

                <TextView
                    android:id="@+id/tvDisplayedCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvCountry"
                    app:layout_constraintStart_toEndOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="@id/tvCountry" />

                <ImageView
                    android:id="@+id/separatorCountry"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvCountry"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvProvince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/provincia"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorCountry" />

                <TextView
                    android:id="@+id/tvDisplayedProvince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvProvince"
                    app:layout_constraintStart_toEndOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="@id/tvProvince" />

                <ImageView
                    android:id="@+id/separatorProvince"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvProvince"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvLocality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/localidad"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorProvince" />

                <TextView
                    android:id="@+id/tvDisplayedLocality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvLocality"
                    app:layout_constraintStart_toEndOf="@id/guideline3"
                    app:layout_constraintTop_toTopOf="@id/tvLocality" />

                <ImageView
                    android:id="@+id/separatorLocality"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvLocality"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="ImageContrastCheck" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clWritingView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/btnEdit">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="240dp" />

                <TextView
                    android:id="@+id/tvStreetW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/calle"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    app:strokeWidth="1dp"
                    android:id="@+id/cvEditStreetW"
                    app:strokeColor="@color/grayLight"
                    app:layout_constraintBottom_toBottomOf="@id/tvStreetW"
                    app:layout_constraintStart_toEndOf="@id/guideline4"
                    app:layout_constraintTop_toTopOf="@id/tvStreetW"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tvEditStreet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:layout_marginStart="4dp"
                        android:autofillHints="name"
                        android:textColor="@color/blue"
                        tools:ignore="LabelFor" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/separatorStreetW"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/cvEditStreetW"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvNumberW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/n_mero"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorStreetW" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    app:strokeWidth="1dp"
                    android:id="@+id/cvEditNumberW"
                    app:strokeColor="@color/grayLight"
                    app:layout_constraintBottom_toBottomOf="@id/tvNumberW"
                    app:layout_constraintStart_toEndOf="@id/guideline4"
                    app:layout_constraintTop_toTopOf="@id/tvNumberW"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tvEditNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_marginStart="4dp"
                        android:autofillHints="postalAddress"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        tools:ignore="LabelFor" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/separatorNumberW"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/cvEditNumberW"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvFloorW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/piso"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorNumberW" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    app:strokeWidth="1dp"
                    android:id="@+id/cvEditFloorW"
                    app:strokeColor="@color/grayLight"
                    app:layout_constraintBottom_toBottomOf="@id/tvFloorW"
                    app:layout_constraintStart_toEndOf="@id/guideline4"
                    app:layout_constraintTop_toTopOf="@id/tvFloorW"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tvEditFloor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_marginStart="4dp"
                        android:autofillHints="name"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        tools:ignore="LabelFor" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/separatorFloorW"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/cvEditFloorW"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvDepartmentW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/departamento"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorFloorW" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    app:strokeWidth="1dp"
                    android:id="@+id/cvEditDepartmentW"
                    app:strokeColor="@color/grayLight"
                    app:layout_constraintBottom_toBottomOf="@id/tvDepartmentW"
                    app:layout_constraintStart_toEndOf="@id/guideline4"
                    app:layout_constraintTop_toTopOf="@id/tvDepartmentW"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tvEditDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:layout_marginStart="4dp"
                        android:autofillHints="name"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        tools:ignore="LabelFor" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/separatorDepartmentW"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/cvEditDepartmentW"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvObservationsW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/observaciones"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorDepartmentW" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    app:strokeWidth="1dp"
                    android:id="@+id/cvEditObservationsW"
                    app:strokeColor="@color/grayLight"
                    app:layout_constraintBottom_toBottomOf="@id/tvObservationsW"
                    app:layout_constraintStart_toEndOf="@id/guideline4"
                    app:layout_constraintTop_toTopOf="@id/tvObservationsW"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tvEditObservations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:layout_marginStart="4dp"
                        android:autofillHints="name"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        tools:ignore="LabelFor" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/separatorObservationsW"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/cvEditObservationsW"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvPostalCodeW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/c_digo_postal"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorObservationsW" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    app:strokeWidth="1dp"
                    android:id="@+id/cvEditPostalCodeW"
                    app:strokeColor="@color/grayLight"
                    app:layout_constraintBottom_toBottomOf="@id/tvPostalCodeW"
                    app:layout_constraintStart_toEndOf="@id/guideline4"
                    app:layout_constraintTop_toTopOf="@id/tvPostalCodeW"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/white"
                        app:boxBackgroundMode="filled"
                        app:counterEnabled="true"
                        app:counterMaxLength="4"
                        app:counterTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/postalCodeBillAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:imeOptions="actionSend"
                            android:inputType="number"
                            android:textColor="@color/blue"
                            tools:ignore="VisualLintTextFieldSize,SpeakableTextPresentCheck" />

                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/separatorPostalCodeW"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/cvEditPostalCodeW"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvCountryW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/pa_s"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorPostalCodeW" />

                <TextView
                    android:id="@+id/tvDisplayedCountryW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvCountryW"
                    app:layout_constraintStart_toEndOf="@id/guideline4"
                    app:layout_constraintTop_toTopOf="@id/tvCountryW" />

                <ImageView
                    android:id="@+id/separatorCountryW"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvCountryW"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvProvinceW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/provincia"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorCountryW" />

                <Spinner
                    android:id="@+id/spinnerProvinceBillAddress"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvProvinceW"
                    app:layout_constraintStart_toEndOf="@id/guideline4"
                    app:layout_constraintTop_toTopOf="@id/tvProvinceW" />

                <ImageView
                    android:id="@+id/separatorProvinceW"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/tvProvinceW"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvLocalityW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:maxWidth="130dp"
                    android:text="@string/localidad"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separatorProvinceW" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    app:strokeWidth="1dp"
                    android:id="@+id/cvLocalityBillAddress"
                    app:strokeColor="@color/grayLight"
                    app:layout_constraintBottom_toBottomOf="@id/tvLocalityW"
                    app:layout_constraintStart_toEndOf="@id/guideline4"
                    app:layout_constraintTop_toTopOf="@id/tvLocalityW"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinnerLocalityBillAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/localityBillAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:visibility="gone"
                        tools:ignore="LabelFor,VisualLintTextFieldSize" />

                </com.google.android.material.card.MaterialCardView>

                <CheckBox
                    android:id="@+id/cbLocalityBillNotFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/cvLocalityBillAddress"
                    app:layout_constraintTop_toBottomOf="@id/cvLocalityBillAddress"
                    android:text="@string/no_encuentro_mi_localidad"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/separatorLocalityW"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"
                    android:background="@color/grayLight"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/divider_horizontal_bright"
                    app:layout_constraintTop_toBottomOf="@id/cbLocalityBillNotFound"
                    tools:ignore="ImageContrastCheck" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/miniCards"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="12dp"
                    app:layout_constraintTop_toBottomOf="@id/separatorLocalityW"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal"
                    android:layout_height="48dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:id="@+id/btnCancel"
                        app:cardBackgroundColor="@color/white"
                        app:strokeColor="@color/gray"
                        android:layout_margin="4dp"
                        app:strokeWidth="0.4dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/cancelar"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginEnd="48dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/blue"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:strokeColor="@color/gray"
                        app:cardBackgroundColor="@color/blue"
                        android:id="@+id/btnSave"
                        android:layout_margin="4dp"
                        app:strokeWidth="0.4dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/guardar"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginEnd="48dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>